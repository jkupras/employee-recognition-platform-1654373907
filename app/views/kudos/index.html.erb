<h1>Kudos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Giver email</th>
      <th>Receiver email</th>
      <th>Company Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kudos.each do |kudo| %>
      <tr>
        <td><%=  kudo.title %></td>
        <td><%=  kudo.content %></td>
        <td><%=  kudo.giver.email %></td>
        <td><%=  kudo.receiver.email %></td>
        <td><%=  kudo.company_value.title %></td>
        <td><%= link_to 'Show', kudo %></td>
        <td>
          <% if current_employee == kudo.giver %>
            <%= link_to 'Edit', edit_kudo_path(kudo) %>
          <% end %>
        </td>
        <td>
          <% if current_employee == kudo.giver %>
          <%= link_to 'Destroy', kudo, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_employee.number_of_available_kudos > 0 %>
  <%= link_to 'New Kudo', new_kudo_path %>
<% else %>
<p>You don't have any available kudos to give</p>
<% end %>
